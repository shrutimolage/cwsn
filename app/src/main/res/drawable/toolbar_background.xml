<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <item android:id="@+id/itemId" android:left="-5dp" android:right="-5dp" android:top="-5dp">
        <shape>
            <solid android:color="@color/transparent"/>
            <stroke
                android:width="3dp"
                android:color="#1C75BC" >
            </stroke>

        </shape>
    </item>
</layer-list>