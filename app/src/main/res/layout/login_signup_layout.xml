<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_color_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <ImageView
         android:layout_width="match_parent"
         android:background="@drawable/login_top_image"
         android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="300dp"
            android:layout_height="match_parent">
           <ScrollView
               android:layout_width="match_parent"
               android:layout_marginTop="35dp"
               android:background="@drawable/only_top_curve_white_bg"
               android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="60dp"
                       android:textSize="@dimen/text_size_22"
                       android:textColor="@color/black"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:text="Welcome TO CWSN" />
                   <com.google.android.material.textfield.TextInputLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="@string/usernameorEmail_label_nocolon"
                       android:textColorHint="@color/darkgrey"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="16dp"
                       android:layout_marginTop="20dp"
                       app:boxBackgroundColor="@color/white"
                       app:errorEnabled="true"
                       >

                       <EditText
                           android:id="@+id/et_username"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="text"
                           android:drawablePadding="5dp"
                           android:drawableEnd="@drawable/ic_person_black"
                           android:maxLines="1"
                           android:textColor="@color/black_light"
                           android:textSize="@dimen/text_size_14" />

                   </com.google.android.material.textfield.TextInputLayout>
                   <com.google.android.material.textfield.TextInputLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="@string/password_label"
                       android:id="@+id/inpl_password"
                       android:textColorHint="@color/darkgrey"
                       app:passwordToggleEnabled="true"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="16dp"
                       android:layout_marginTop="10dp"
                       app:boxBackgroundColor="@color/white"
                       app:passwordToggleTint="@color/black_light"
                       >
                       <EditText
                           android:id="@+id/et_password"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:maxLines="1"
                           android:drawablePadding="15dp"
                           android:inputType="textPassword"
                           android:textColor="@color/black_light"
                           android:textSize="@dimen/text_size_14" />

                   </com.google.android.material.textfield.TextInputLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="16dp"
                       android:layout_marginTop="5dp"
                       android:layout_height="wrap_content">

                       <CheckBox
                           android:id="@+id/cb_savePwd"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/text_size_13"
                           android:textColor="@color/black"
                           android:text="Remember me" />
                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/ll_actionBtn"
                       android:layout_width="match_parent"
                       android:orientation="vertical"
                       android:layout_marginLeft="16dp"
                       android:layout_marginRight="16dp"
                       android:layout_marginTop="30dp"
                        android:background="@drawable/app_textview_selector"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="5dp"
                           android:layout_margin="5dp"
                           android:gravity="center"
                           android:textColor="@color/white"
                           android:textSize="@dimen/text_size_18"
                           android:text="LOGIN" />

                   </LinearLayout>
                   <TextView
                       android:id="@+id/tv_forgotPwd"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="@dimen/text_size_15"
                       android:layout_gravity="center|top"
                       android:padding="5dp"
                       android:layout_marginTop="20dp"
                       android:gravity="right"
                       android:text="@string/forgot_password_click_here" />
               </LinearLayout>
           </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_cwsn_logo_white_bg" />
            </LinearLayout>
        </FrameLayout>

</FrameLayout>