<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/header_dashboard"
        layout="@layout/nav_header"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/header_dashboard"
        android:id="@+id/rcly_slide_panel"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_above="@+id/version_layout"
        android:layout_height="wrap_content"
        />

        <LinearLayout
            android:id="@+id/version_layout"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_appCurrVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:text="Ver: 1.0.1" />

            <TextView
                android:id="@+id/tv_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:text="@string/created_by_it_scient_label"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />
        </LinearLayout>
</RelativeLayout>