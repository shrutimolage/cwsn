<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.SummaryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_schoolName"
            style="@style/BigSizeBlackAppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Name" />

        <TextView
            android:id="@+id/tv_schoolAddress"
            style="@style/SmallSizeBlackAppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Address" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            tools:listitem="@layout/row_school_survey_summary"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:weightSum="1"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_totalQuestion"
            style="@style/NormalSizeBlackAppTextView"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Total Question 12" />

        <TextView
            android:id="@+id/tv_totalAnswer"
            style="@style/NormalSizeBlackAppTextView"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="Answered 5" />
    </LinearLayout>
</FrameLayout>