<?xml version="1.0" encoding="utf-8"?><!-- Toolbar in place of action bar for material designing -->
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dashboard_toolbar_color">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/navigationBar"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="8dp"
        android:contentDescription="Navigation Bar"
        android:src="@drawable/ic_white_arrow_back" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Schools"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />
</androidx.appcompat.widget.Toolbar>