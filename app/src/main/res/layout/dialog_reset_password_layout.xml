<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_forgot_pwd_layout_main"
    android:background="@drawable/card_large_curved_white_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@color/transparent"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Reset Password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/img_closeDialog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/ic_close_black_icon" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.AppTheme.TextInputLayoutList"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/enter_old_password_label"
                    app:passwordToggleEnabled="true"
                    app:boxStrokeColor="@color/theme_color_light"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/edt_oldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.AppTheme.TextInputLayoutList"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/enter_new_password_label"
                    app:passwordToggleEnabled="true"
                    app:boxStrokeColor="@color/theme_color_light"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/edt_newPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.AppTheme.TextInputLayoutList"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/enter_new_password_label"
                    app:passwordToggleEnabled="true"
                    app:boxStrokeColor="@color/theme_color_light"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/edt_retypePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/tv_repeatPasswordError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password does not match!"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColor="@color/red"
                    android:visibility="invisible"
                    />


                <TextView
                    android:id="@+id/txt_resetPwd"
                    android:layout_width="wrap_content"
                    android:background="@drawable/app_textview_selector"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_13"
                    android:padding="15dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/submit_label" />
            </LinearLayout>

        </LinearLayout>
</LinearLayout>