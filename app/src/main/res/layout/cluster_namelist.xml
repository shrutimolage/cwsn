<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow_white_layer_list"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clustername"
            android:layout_width="0dp"
            style="@style/SmallSizeBlackAppTextView"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:text="Total Student count" />

        <ImageView
            android:id="@+id/img_StartSurvey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_start_survey_icon" />

    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="gone"
        android:layout_margin="2dp"
        android:background="@color/backgd"
        />
</LinearLayout>