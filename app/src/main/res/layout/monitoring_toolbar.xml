<?xml version="1.0" encoding="utf-8"?><!-- Toolbar in place of action bar for material designing -->
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/dashboard_toolbar_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navigationBar"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            android:visibility="visible"
            android:contentDescription="Navigation Bar"
            android:src="@drawable/ic_white_arrow_back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Welcome,Teacher Name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
        <ImageView
            android:id="@+id/img_logoutApp"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_logout_icon"
            android:layout_gravity="right|center"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cimg_profileIcon"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"
            android:src="@drawable/ic_user_profile_icon" />
    </LinearLayout>


</androidx.appcompat.widget.Toolbar>