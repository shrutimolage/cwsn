<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_profile"
    android:background="@drawable/profile_gradient_bg"
    tools:context=".view.activity.UserProfileActivity">

    <include
        layout="@layout/profile_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/card_medium_curved_white_bg"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_teacherName"
                        style="@style/BigSizeBlackAppTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_teacherEmail"
                        style="@style/NormalSizeBlackAppTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_teacherMobile"
                        style="@style/NormalSizeBlackAppTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/colorVeryNormal"
                    android:layout_height="1.5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:layout_weight="0.25"
                            android:padding="3dp"
                            android:gravity="left|center"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="@string/username_label"
                            />
                        <EditText
                            android:id="@+id/edt_userName"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textSize="@dimen/text_size_13"
                            android:inputType="text|textAutoCorrect|textAutoComplete"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:text=""
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.24"
                            android:gravity="left|center"
                            android:padding="3dp"
                            android:text="@string/date_of_birth_label"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/edt_dob"
                            android:layout_width="0dp"
                            android:layout_weight="0.76"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textSize="@dimen/text_size_13"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:text=""
                            app:drawableRightCompat="@drawable/calendar_icon" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:layout_weight="0.25"
                            android:padding="3dp"
                            android:gravity="left|center"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="@string/gender_label"
                            />
                        <EditText
                            android:id="@+id/edt_gender"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textSize="@dimen/text_size_13"
                            android:inputType="text|textAutoCorrect|textAutoComplete"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:text=""
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:layout_weight="0.2"
                            android:padding="3dp"
                            android:gravity="left|top"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="@string/address_label"
                            />
                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:minLines="4"
                            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:gravity="top|left"
                            android:text=""
                            />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/colorVeryNormal"
                    android:layout_height="1.5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:layout_weight="0.25"
                            android:padding="3dp"
                            android:gravity="left|center"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="@string/schoolName"
                            />
                        <EditText
                            android:id="@+id/edt_schoolName"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textSize="@dimen/text_size_13"
                            android:inputType="text|textAutoCorrect|textAutoComplete"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:text=""
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:layout_weight="0.25"
                            android:padding="3dp"
                            android:gravity="left|top"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="@string/schooladdress_label"
                            />
                        <EditText
                            android:id="@+id/edt_schoolAddress"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:minLines="4"
                            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:gravity="top|left"
                            android:text=""
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:layout_weight="0.25"
                            android:padding="3dp"
                            android:gravity="left|center"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="@string/cityName"
                            />
                        <EditText
                            android:id="@+id/edt_cityName"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textSize="@dimen/text_size_13"
                            android:inputType="text|textAutoCorrect|textAutoComplete"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:text=""
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:layout_weight="0.25"
                            android:padding="3dp"
                            android:gravity="left|center"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="@string/state_label"
                            />
                        <EditText
                            android:id="@+id/edt_stateName"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textSize="@dimen/text_size_13"
                            android:inputType="text|textAutoCorrect|textAutoComplete"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:text=""
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:padding="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:layout_weight="0.25"
                            android:padding="3dp"
                            android:gravity="left|center"
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="@string/pincode_label"
                            />
                        <EditText
                            android:id="@+id/edt_pincode"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textSize="@dimen/text_size_13"
                            android:inputType="text|textAutoCorrect|textAutoComplete"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:text=""
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/iv_userPhoto"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="9dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_profile_loader" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    style="@style/NormalSizeBlackAppTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:background="@drawable/app_textview_selector"
                    android:text="Edit" />

                <TextView
                    android:id="@+id/textView13"
                    style="@style/NormalSizeBlackAppTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/app_textview_selector"
                    android:text="Reset Password" />
            </LinearLayout>

        </FrameLayout>

    </ScrollView>



</LinearLayout>