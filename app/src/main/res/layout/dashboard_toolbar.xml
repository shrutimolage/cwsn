<?xml version="1.0" encoding="utf-8"?><!-- Toolbar in place of action bar for material designing -->
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/dashboard_top_gradient">
       <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navigationBar"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:contentDescription="Navigation Bar"
            android:src="@drawable/ic_navigation_bar_black" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Welcome,Teacher Name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_logout_icon"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cimg_profileIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_user_profile_icon" />

</androidx.appcompat.widget.Toolbar>