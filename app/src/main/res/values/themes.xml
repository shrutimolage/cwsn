<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color_dark</item>
        <item name="colorSecondaryVariant">@color/theme_color_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomTabTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!--    for black color text size-->
    <style name="ExtraSmallSizeBlackAppTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="SmallSizeBlackAppTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="NormalSizeBlackAppTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="NormalSizeBoldBlackAppTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="BigSizeBlackAppTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="VeryBigSizeBlackAppTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="SmallSizeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/grey_border_bg</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="NormalSizeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/grey_border_bg</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="BigSizeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/grey_border_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayoutList" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HintTextAlt
        </item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="hintTextColor">@color/btn_grey</item>
        <item name="android:textColorHint">@color/btn_grey</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextAlt" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="AppSelectorTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:minHeight">36dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/app_textview_selector</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="UrlTypeLinkTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="BottomNavigationFontStyle" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>